<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<!--MybatisGenerator代码生成配置文件，与项目无关联，仅代码生成使用-->
<generatorConfiguration>
    <context id="DB_Tables" targetRuntime="MyBatis3">
        <plugin type="com.yanll.framework.util.mybatis.generator.plugins.MapperPlugin"/>
        <plugin type="com.yanll.framework.util.mybatis.generator.plugins.VOPlugin"/>

        <commentGenerator>
            <property name="suppressDate" value="true"/><!--不生成时间戳注释-->
        </commentGenerator>

        <!--数据库连接信息-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver" userId="root" password="root"
                        connectionURL="jdbc:mysql://172.21.20.33:3306/jpdb?useUnicode=true&amp;characterEncoding=UTF-8&amp;autoReconnect=true&amp;allowMultiQueries=true">
        </jdbcConnection>

        <!--Java Bean生成的路径以及package命名空间定义-->
        <javaModelGenerator targetPackage="com.yanll.business.indexdata.domain" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaModelGenerator>


        <!--sql xml生成的路径-->
        <sqlMapGenerator targetPackage="resources/mapper" targetProject="src/main">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--java mapper生成的路径以及package命名空间定义-->
        <!--targetPackage路径对应项目中的dao文件夹，为了和手写的Mapper使用同一个接口，即调用框架的getMapper()-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.yanll.business.indexdata.dao" targetProject="/">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <!-- 需要生存的表，可以配置多个，*ByExample是示例，都配置false -->
        <!-- tableName：表名，domainObjectName：实体名 -->
        <table tableName="t_index_data" domainObjectName="IndexDataBean" selectByExampleQueryId="false"
               enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
               enableCountByExample="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/><!--配制generatedKey表示返回插入的主键，否则请删除这一行-->
        </table>
        <table tableName="t_index_data_def" domainObjectName="IndexDataDefBean" selectByExampleQueryId="false"
               enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false"
               enableCountByExample="false">
        </table>
    </context>
</generatorConfiguration>